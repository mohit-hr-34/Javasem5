//Write a program to print the sum and product of digits of an integer and reverse the integer
import java.util.*;
class p6
{ public static void main(String args[])
  { int num,rem,rev=0,sum=0,prod=1;
    Scanner sc=new Scanner(System.in);
    System.out.println("Enter any number:");
    num=sc.nextInt();
    while(num>0)
    { rem=num%10;
      sum=sum+rem;
      prod=prod*rem;
      rev=rev*10+rem
      num=num/10;
    }
    System.out.println("Sum of digits :"+sum);
    System.out.println("Product of digits :"+prod);
    System.out.println("Reverse :"+rev);
  }
}  
