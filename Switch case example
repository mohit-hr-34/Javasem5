//Write a java program to do show a menu for arithematic calculations using switch case
import java.util.*;
class demi
{ public static void main(String args[])
  { int choice, num1,num2;
     Scanner sc=new Scanner(System.in);
     System.out.println("Enter two numbers ");
       num1=sc.nextInt();
       num2=sc.nextInt();
     System.out.println("1.Addition\n2.Substraction\n3.Multiplication\n4.Exit");
     System.out.println("Enter your choice");
      choice=sc.nextInt();
     switch(choice)
     { case 1:
              System.out.println("The Addition of two numbers is:"+(num1+num2));
              break;
       case 2:
              System.out.println("The Difference of two numbers is:"+(num1-num2));
              break;
       case 3:
              System.out.println("The Multiplication of two numbers is:"+(num1*num2));
              break;
       default:
               System.out.println("Enter correct choice");
               break;
     }
  }
}  
