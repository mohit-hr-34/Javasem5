//Write a program to find the sum and product of digits of given number
import java.util.*;
class Sum
{ public static void main(String args[])
  { int num,rem,sum=0,p=1;
    Scanner sc=new Scanner(System.in);
    System.out.println("Enter the number");
      num=sc.nextInt();
    while(num>0)
     { rem=num%10;
       sum=sum+rem;
       p=p*rem;
       num=num/10;
     }
    System.out.println("Sum is: "+sum);
    System.out.println("Product is: "+p);
  }
}  
